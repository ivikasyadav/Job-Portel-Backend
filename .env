# server/.env

# MongoDB Connection URI
MONGODB_URI=mongodb://localhost:27017/jobportal_db

# JWT Secret Key (MUST be strong and random in production)
JWT_SECRET=supersecretjwtkey12345!@#$

# JWT Expiration Time (e.g., 1h, 7d, 30m)
JWT_EXPIRES_IN=1d

# Email Service Configuration (for real-time notifications - example using ethereal.email or a real SMTP)
# If using a real service like SendGrid, Mailgun, or AWS SES, consult their documentation for host/port/user/pass.
# Ethereal.email is good for testing.
EMAIL_HOST=smtp.ethereal.email
EMAIL_PORT=587
EMAIL_USER=your_ethereal_email@ethereal.email
EMAIL_PASS=your_ethereal_password
EMAIL_FROM="Job Portal Notifications <noreply@jobportal.com>"

# Port for the Express server
PORT=5000

# Frontend URL (for CORS or other frontend-related configurations if needed)
CLIENT_URL=http://localhost:5173 # Adjust if your React app runs on a different port
